<% if @success -%>
  $('#filesize').text('<%=j params[:files].map { |file| number_to_human_size(file.size) }.join(', ') %>');
  $('#spinner').hide();
  ConsoleUpdater.parsing = true;
  url = $('#new_upload').data('parse-url');
  $.post(
    url, {
      item_id: <%= @item_id %>,
      files: <%= raw @files %>,
    },
    null,
    'script'
  );

  setTimeout(ConsoleUpdater.updateConsole, 1000);
<% else -%>
  $("#<%= @item_id  %>").find('span').html('(<%=h flash.now[:error] %>)');
<% end -%>
